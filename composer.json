{
  "name": "adt1710/buscador-cursos",
  "description": "Projeto que busca cursos no site da Alura",
  "minimum-stability": "stable",
  "license": "proprietary",
  "authors": [
    {
      "name": "Adriano Dias Torralvo",
      "email": "adrianoibira.adt@gmail.com"
    }
  ],
  "type": "library",
  "version": "1.0",
  "require": {
    "guzzlehttp/guzzle": "^7.8",
    "symfony/dom-crawler": "^7.1",
    "symfony/css-selector": "^7.1"
  },
  "autoload": {
    "psr-4": {
      "Alura\\BuscadorDeCursos\\": "src/"
    },
    "classmap": [],
    "files": ["functions.php"]
  },
  "require-dev": {
    "phpunit/phpunit": "^11.2",
    "squizlabs/php_codesniffer": "^3.10",
    "phan/phan": "^5.4"
  },
  "scripts": {
    "test": "phpunit tests\\BuscardorDeCursos.php",
    "cs": "phpcs --standard=PSR12 src\\",
    "phan": "phan --allow-polyfill-parser src\\Buscador.php",
    "ls": "dir",
    "check": [
      "@phan",
      "@cs"
    ],
    "post-update-cmd": [
      "@check"
    ]
  },
  "scripts-descriptions": {
    "check": "Roda as verificações do código. PHAN e PHPCS."
  }
}
